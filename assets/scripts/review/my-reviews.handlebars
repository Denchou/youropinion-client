{{#if reviews.length}}
{{#each reviews as |review|}}


    <section data-id="{{review.id}}" class="container-fluid">
      <div class="card text-center text-white bg-info mb-3">
          <div class="card-header">
            <button type="button" class="close" aria-label="Close">
              <div aria-hidden="true">&times;</div>
            </button>
            <h2 class="topic">{{review.topic}}</h2>
          </div>

      <div class="card-body">
        <p class="card-text">{{review.article}}</p>
      </div>
      <div>Rating: <span class="star-review review-{{review.star}}"></span></div>
      <div>By: Opinionator #{{review.user.id}}. You!</div>
      <div>Opinion ID:{{review.id}}</div>
      <div class="card-footer">
        <button type="button" class="delete class='btn btn-light">Delete</button>
        <button type="button" class="update class='btn btn-light">Update</button>
      </div>
    </div>
  </section>
{{/each}}
{{else}}
<p>You have no opinions! Kept it all to yourself! Good job!</p>
{{/if}}
